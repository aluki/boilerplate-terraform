# https://taskfile.dev

version: '3'

tasks:

  default:
    cmds:
      - task -l
    silent: true

  init:
    desc: Initialises the project
    sources:
      - mise.toml
    generates:
      - mise.lock
    cmds:
      - mise install

  tf_init:
    desc: Initialises the Terraform project
    deps:
      - init
    sources:
      - versions.tf
    generates:
      - .terraform.lock.hcl
    cmds:
      - tofu init
